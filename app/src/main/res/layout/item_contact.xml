<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/drawborder"
    app:layout_constraintStart_toStartOf="@+id/fragment2btn"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/image"
        android:layout_width="89dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/contact_image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/sharetrip3" />

    <TextView
        android:id="@+id/name"
        android:layout_width="227dp"
        android:layout_height="36dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:labelFor="@id/name"
        android:text="@string/name"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/contact"
        android:layout_width="227dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:labelFor="@id/contact"
        android:text="@string/contact"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/address"
        android:layout_width="227dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:text="@string/address"
        app:layout_constraintEnd_toEndOf="@+id/contact"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contact"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>